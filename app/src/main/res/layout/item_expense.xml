<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expensePane"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/horizontal_margin">

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@drawable/ic_misc" />

    <TextView
        android:id="@+id/expenseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_toRightOf="@+id/itemIcon"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Expense" />

    <TextView
        android:id="@+id/dateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expenseTextView"
        android:layout_weight="0"
        android:layout_toRightOf="@+id/itemIcon"
        tools:text="Date" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/costTextView"
        android:background="@drawable/ic_rupee_symbol" />

    <TextView
        android:id="@+id/costTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/horizontal_margin"
        android:textSize="26sp"
        tools:text="123" />
</RelativeLayout>